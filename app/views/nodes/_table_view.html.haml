.float_right
  = link_to "Normal view", nodes_path

%table.full
  %thead
    %th Name
    %th Hostname
    %th Ip
  %body
    - nodes.each do |node|
      %tr{:class => cycle("odd", "even")}
        %td= link_to node.name, node_path(node.name) 
        %td= node.hostname
        %td= node.ip                                  