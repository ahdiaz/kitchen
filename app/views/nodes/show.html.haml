%h1 Workstation info  

#errors
  = @node.error
/ #error_details
/   = @node.normal["last_run_status_bt"]

#node-info{:class => @node.error? ? "error" : @node.status} 
  %ul
    %h3 Info
    %li 
      %strong Name:
      = @node.name
    %li
      %strong Hostname:
      = @node.hostname  
  %ul
    %h3 Users
    - @node.users.each do |user|
      %li= link_to user, user_path(user) 
  %ul
    %h3 Net
    %li
      %strong Ip:
      = @node.ip 
    %li
      %stronc Mac:
      = @node.automatic["macaddress"]
  %ul
    %h3 Others
    %li
      %strong Uptime
      = @node.automatic["uptime"]   
    
.clear  

  
  


#run-list.sortable
  %ul
    -@node.extended_run_list.each do |run_list_item|
      %li.item{:class => run_list_item.type}
        = run_list_item.name
        = run_list_item.version     
        
#roles.sortable
  %ul
    - @roles.each do |role|
      %li.role= normalize_item(role)

#recipes.sortable
  %ul
    - @recipes.each do |recipe|
      %li.recipe= normalize_item(recipe)