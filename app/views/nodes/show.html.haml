%h1= @node.name  

= link_to "Editar", edit_node_path(@node.name)

#status
  %p= @node.platform_version
  %p= @node.ip
  %p= @node.automatic["uptime"] 
  
%h3 Run List
%table.table
  %thead
    %tr
      %th.first Position
      %th Name
      %th Version
      %th.last Type
  %tbody
    - if @node.extended_run_list.empty?
      %tr
        %td{:colspan => 2} This node has no roles or recipes applied.
    - else
      -@node.extended_run_list.each_with_index do |run_list_item, i|
        %tr
          %td.position= i
          %td= run_list_item.name
          %td= run_list_item.version
          %td= run_list_item.type     